<div class="container">
  <a href="../../"><span class="glyphicon glyphicon-chevron-left"></span> Back</a>
  <form action="/menu-items/edit/{{item._id}}" method="POST" class="form-horizontal" role="form">
    <legend>{{formTitle}}</legend>

    <div class="form-group">
      <label for="input-name" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input type="text" id="input-name" name="name" class="form-control" value="{{item.name}}">
      </div>
    </div>

    <div class="form-group">
      <label for="input-section" class="col-sm-2 control-label">Section</label>
      <div class="col-sm-10">
        <input type="text" id="input-section" name="section" class="form-control" value="{{item.section}}">
      </div>
    </div>

    <div class="form-group">
      <label for="input-description" class="col-sm-2 control-label">Description</label>
      <div class="col-sm-10">
        <input type="text" id="input-description" name="description" class="form-control" value="{{item.description}}">
      </div>
    </div>

    <div class="form-group">
      <label for="input-notes" class="col-sm-2 control-label">Notes</label>
      <div class="col-sm-10">
        <input type="text" id="input-notes" name="notes" class="form-control" value="{{item.notes}}">
      </div>
    </div>

    <div class="form-group">
      <label for="input-order" class="col-sm-2 control-label">Order</label>
      <div class="col-sm-10">
        <input type="number" id="input-order" name="order" class="form-control" value="{{item.order}}">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <label>
            <input id="input-isActive" type="checkbox" {{#if item.isActive}}checked{{/if}} name="isActive"> Active
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>

  <hr>

  <a href="./{{item._id}}/prices" class="btn btn-default">Manage Pricing</a>


  <table class="table">
    <thead>
      <tr>
        <th>Unit</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      {{#item.prices}}
        <tr>
          <td>{{this.unit}}</td>
          <td>${{this.price}}</td>
        </tr>
      {{/item.prices}}
    </tbody>
  </table>

</div>